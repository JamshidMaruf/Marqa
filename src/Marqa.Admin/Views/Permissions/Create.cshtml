@model Marqa.Service.Services.Permissions.Models.PermissionCreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

@if (ViewBag.ExceptionMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ExceptionMessage
    </div>
}

    <div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Module" class="control-label"></label>
                <input asp-for="Module" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Action" class="control-label"></label>
                <input asp-for="Action" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-success">Save</button>
                <a type="button" asp-action="Index" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}