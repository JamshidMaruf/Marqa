@{
	Layout = "_Layout";
}

@model List<Marqa.Service.Services.Permissions.Models.PermissionViewModel>

<h1>Permissions list</h1>

<div class="d-grid gap-2 d-md-flex justify-content-md-end mb-3 mr-3">
    <a class="btn btn-success" asp-action="Create">Create</a>
</div>

<div class="container">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Module</th>
            <th>Action</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Module</td>
                <td>@item.Action</td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id">
                        <i class="fa-regular fa-pen-to-square"></i>
                    </a>
                    
                    <i class="fa-solid fa-trash" data-bs-target="#deleteModel@item.Id" data-bs-toggle="modal"></i>
                    
                    <i class="fa-regular fa-eye" data-bs-target="#viewModel@item.Id" data-bs-toggle="modal"></i>
                    
                    <!-- Delete Modal -->
                    <div
                        class="modal fade"
                        id="deleteModel@item.Id"
                        data-bs-backdrop="static"
                        data-bs-keyboard="false"
                        tabindex="-1"
                        aria-labelledby="deleteModelLabel"
                        aria-hidden="true">
    
                        <div class="modal-dialog">
                            <div class="modal-content">

                                <div class="modal-body">
                                    Are you sure to delete?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                                    <a type="button" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Yes</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    

                    <!-- View Modal -->
                    <div class="modal fade" id="viewModel@item.Id" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="viewModelLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="viewModel@item.IdLabel">Permission detail</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    
                                    <div class="form-group mb-3">
                                        <label asp-for="@item.Name" class="control-label"></label>
                                        <input asp-for="@item.Name" class="form-control" disabled="" />
                                    </div>
                                
                                    <div class="form-group mb-3">
                                        <label asp-for="@item.Module" class="control-label"></label>
                                        <input asp-for="@item.Module" class="form-control" disabled="" />
                                    </div>
                                
                                    <div class="form-group mb-3">
                                        <label asp-for="@item.Action" class="control-label"></label>
                                        <input asp-for="@item.Action" class="form-control" disabled="" />
                                    </div>
                                
                                    <div class="form-group mb-3">
                                        <label asp-for="@item.Description" class="control-label"></label>
                                        <input asp-for="@item.Description" class="form-control" disabled="" />
                                    </div>
                                    
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>


