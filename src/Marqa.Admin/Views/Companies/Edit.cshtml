@model CompanyUpdateFormModel

@{
	TempData["Edit"] = "Edit";
}

<div class="container-fluid py-3">
	<!-- Header -->
	<div class="mb-3">
		<h1 class="h4 mb-0 fw-700">Edit Company</h1>
	</div>

	<div class="row">
		<div class="col-lg-8">
			<div class="card">
				<div class="card-body">
					<form method="post" asp-action="Edit" asp-route-id="ViewBag.Id">

						<input type="hidden" asp-for="Id" />

						<!-- Company Name -->
						<div class="mb-3">
							<div class="mb-3">
								<label asp-for="Name" class="form-label">Company Name <span class="text-danger">*</span></label>
								<input asp-for="Name" class="form-control" placeholder="Enter company name" required>
								<span asp-validation-for="Name" class="text-danger small"></span>
							</div>						
						</div>

						<!-- Director Information -->
						<div class="mb-3">
							<div class="row">
								<div class="col-md-6 mb-3">
									<label asp-for="Director" class="form-label">Director Name <span class="text-danger">*</span></label>
									<input asp-for="Director" class="form-control" placeholder="Enter full name" required>
									<span asp-validation-for="Director" class="text-danger small"></span>
								</div>
							</div>
						</div>

						<!-- Director Information -->
						<div class="mb-3">
							<div class="row">
								<div class="col-md-6 mb-3">
									<label asp-for="Director" class="form-label">Director Name <span class="text-danger">*</span></label>
									<input asp-for="Director" class="form-control" placeholder="Enter full name" required>
									<span asp-validation-for="Director" class="text-danger small"></span>
								</div>
							</div>
						</div>

						<!-- Contact Information -->
						<div class="mb-3">
							<div class="mb-3">
								<label asp-for="Phone" class="form-label">Phone <span class="text-danger">*</span></label>
								<input asp-for="Phone" type="tel" class="form-control" placeholder="+998..." required>
								<span asp-validation-for="Phone" class="text-danger small"></span>
							</div>
							<div class="mb-3">
								<label asp-for="Email" class="form-label">Email <span class="text-danger">*</span></label>
								<input asp-for="Email" type="email" class="form-control" placeholder="email@company.com" required>
								<span asp-validation-for="Email" class="text-danger small"></span>
							</div>
						</div>

						<!-- Address -->
						<div class="mb-3">
							<div class="mb-3">
								<label asp-for="Address" class="form-label">Addess <span class="text-danger">*</span></label>
								<input asp-for="Address" type="text" class="form-control" placeholder="Enter address" required>
								<span asp-validation-for="Address" class="text-danger small"></span>
							</div>
						</div>

						<!-- Buttons -->
						<div class="d-flex gap-2 mt-3">
							<a href="@Url.Action("Index")" class="btn btn-outline-secondary">
								<i class="fas fa-times me-1"></i>Cancel
							</a>
							<button type="submit" class="btn btn-primary" style="color:gold">
								<i class="fas fa-save me-1"></i>Update
							</button>
						</div>

					</form>
				</div>
			</div>
		</div>

		<!-- Info Card -->
		<div class="col-lg-4">
			<div class="card">
				<div class="card-body">
					<h6 class="fw-700 mb-2">Information</h6>
					<div class="mb-3">
						<small class="text-muted">Company</small>
						<p class="mb-0 fw-600">@Model.Name</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

